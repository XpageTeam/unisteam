<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="utf-8")
		title Главная
		include inc/head.pug
		include inc/css.pug
	body.main.loading
		#app
			include inc/header.pug
			main#content
				.main-slider
					.swiper-list
						.swiper-wrapper
							.swiper-slide
								.main-slider__info-cont
									.wrapper
										.main-slider__info
											.main-slider__title Серия ППУА на газу. Использование пропана или метана экономит на топливе до 263 тыс. в месяц
											.main-slider__btn 
												a(href="#").btn Смотреть в каталоге
								.main-slider__img
									a(href="#")
										img(src="img/slider-1.jpg", alt="")
							.swiper-pagination
							.swiper-button.swiper-button-prev
							.swiper-button.swiper-button-next
				.search-cont
					.wrapper
						form(action="")
							.search
								input(type="search" placeholder="Найти спецтехнику")
								input(type="submit" value="Найти")
				.catalog-main__cont
					.wrapper
						.catalog-main#main-cat
							.catalog-main__title Каталог автомобилей
							.catalog-main__wrap(v-cloak)
								include inc/cat-script.html
								.catalog-main__col(v-for="btn in btn_list")
									input.catalog-main__col-radio(:id="btn.id" v-model="view" name="view" v-bind:value="btn.id" type="radio")
									label.catalog-main-top-btn.btn.btn--reverse(:for="btn.id") {{ btn.title }}
							.catalog-main__wrap
								.catalog-main__col(v-for="cat in catalog_chunked")
									.catalog-main__list(v-for="item in cat" v-if="animate")
										h2.catalog-main__list-title(:style="'background-image: url('+item.imgSrc+')'") 
											a.catalog-main__list-title-link(:href="item.link") {{ item.title }}
										ul.catalog-main__list-list(v-if="item.list.length")
											li.catalog-main__list-el(v-for="el in item.list")
												a.catalog-main__list-link(:href="el.link") {{ el.title }}
				.partners-cont
					.wrapper
						.partners
							.partners__title.title
							.swiper-list
								.swiper-wrapper
									- for (let i = 0; i < 5; i++)
										.swiper-slide
											a(href="").partners__item
												img(src="img/photos/partners-"+i+".png", alt="")

								.swiper-pagination
								.swiper-button.swiper-button-prev
								.swiper-button.swiper-button-next
				.statistic-cont
					.wrapper
						.statistic
							.statistic__title.title
							.statistic__list
								.statistic__item
									.statistic__item-num
									.statistic__item-text
									.statistic__item-info
				.news-cont
					.wrapper
						.news
							.news__title.title
							.swiper-list
								.swiper-wrapper
									.swiper-slide
										.news__item
											.news__item-img
												img(src="img/photos/news-1.jpg", alt="")
											.news__item-info
												.news__item-text
												.news__item-date
								.swiper-pagination
								.swiper-button.swiper-button-prev
								.swiper-button.swiper-button-next
				.stage-cont
					.wrapper
						.stage
							.stage__title.title
							.stage__img
								include ../img/stage.svg












			include inc/footer.pug
		include inc/scripts.pug
