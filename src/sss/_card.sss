		&__name
			font-weight: 600
			margin-bottom: 15px

		&__parameter
			padding: 10px 0
			border-bottom: 1px solid var(--border-color)
			height: 54px
			display: flex
			flex-direction: column
			justify-content: center

			&:last-child
				border-bottom: 0

			&-label
				font-size: 12px
				display: none

