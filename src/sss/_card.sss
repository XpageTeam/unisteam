.table
	.tbody
	// border: 1px solid var(--border-color)

	.tr
		display: flex
		transition: background .3s ease
		border: 1px solid #F8F8F8
		background-color: #FAFAFA
		margin-bottom: 5px
		cursor: pointer
		transition: box-shadow .3s ease

		&:hover
			box-shadow: 2px 6px 36px rgba(0, 0, 0, 0.08)


	.td
		position: relative
		padding: 20px 25px

		&:nth-child(1)
			max-width: 260px
			width: 100%
			flex: none
			font-weight: bold
			// border-right: 1px solid var(--border-color)

			&:after
				content: ''
				display: block
				width: 1px
				height: 90%
				position: absolute 50% 0 * *
				transform: translate3d(0, -50%,0)
				background: #F2F2F2


.table-new
	.tbody
		> .tr
			margin-bottom: 10px
			margin-right: -5px

			> .td
				background: #fff
				margin-right: 5px
