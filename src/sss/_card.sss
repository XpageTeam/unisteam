@media (min-width: 667px)
	.mobile
		display: none

.mobile
	.card__info-btn
		flex-direction: row
		justify-content: flex-start

		.btn
			margin: 0
			padding: 8px 13px

			&:not(:last-child)
				margin-right: 10px
	
	.btn--cart:before
		margin-right: 11px

	.card-price
		margin: 20px 0

	.title-block__title
		margin-bottom: 15px

// .card
// 	font-family: "EuropeDemi", Arial, sans-serif

.card__media
	position: relative
	width: 50%

	.swiper-slide
		display: flex
		justify-content: center
		border-radius: 5px
		overflow: hidden

		> a
			display: block
			width: 100%
			padding-top: 65%
			position: relative

			img
				display: block
				position: absolute
				top: 0
				left: 0
				width: 100%
				height: 100%
				object-fit: cover
				object-position: center

	.swiper-button-prev
		right: calc(100% + 20px)

	.swiper-button-next
		left: calc(100% + 20px)

	img
		display: block

		&[data-src]
			opacity: 0

	&-cont
		display: flex

	&-top
		position: relative
		margin-bottom: 20px


	&-bot
		max-height: 115px
		overflow: hidden

		.swiper-list
			padding: 2px
			position: relative

		.swiper-slide
			border-radius: 5px
			overflow: hidden
			border: 2px solid transparent
			cursor: pointer

		.swiper-slide-thumb-active
			border-color: var(--second-color)

		.swiper-button
			display: none

		.swiper-counter
			position: absolute
			top: 2px
			right: 3px
			bottom: 3px
			width: calc(25% - 19px)
			z-index: 2
			border-radius: 5px
			background: rgba(25,49,83,.6)
			color: #fff
			padding: 10px
			display: flex
			align-items: center
			justify-content: center
			text-align: center
			font-size: 18px
			font-weight: normal

			&.hide 
				opacity: 0

			.counter
				display: inline-block
				margin-right: 5px

	&-video
		display: flex
		margin-top: 30px

		a
			position: relative
			display: flex
			align-items: center
			padding: 15px 30px
			font-size: em(18)
			color: #fff
			background-color: var(--main-color)
			border: 1px solid var(--main-color)
			border-radius: 3px
			transition: background .3s ease, color .3s ease

			&:hover
				background-color: #fff
				color: var(--main-color)

				&:before
					background-color: var(--main-color)
					background-image: url('../img/ico-triangl.svg')
					background-position: left 12px top 10px

			&:before
				content: ''
				display: block
				size: 30px
				border-radius: 50%
				background-color: #fff
				background-image: url('../img/ico-treangle-blue.svg')
				background-size: 9px
				background-repeat: no-repeat
				background-position: left 12px center
				margin-right: 15px



.card__info
	width: 50%
	padding-left: 100px
	display: flex
	flex-direction: column
	align-items: flex-end
	margin-right: auto

	.title-block__title
		width: 100%
		padding-bottom: 20px
		margin-bottom: 30px
		border-bottom: 1px solid #f8f8f8

		h1
			line-height: 1.2

	&-top,
	&-bottom
		width: 100%

	&-top
		display: flex

		> div
			width: 50%

		.card__info-btn
			padding-left: 30px
			padding-right: 30px
			flex-direction: column
			margin-top: 0
			justify-content: flex-start

			.btn
				margin-bottom: 30px
				text-align: center

		.card-price
			font-size: 28px
			font-weight: 500
			line-height: 1
			white-space: nowrap
			color: var(--thrid-color)
			margin-bottom: 25px

		.card-sticker
			margin-bottom: 30px

			.sticker
				display: inline-block
				padding: 10px 15px
				border-radius: 3px
				border: 1px solid
				line-height: 1

				&-sale
					color: #2EB134
					padding-left: 36px
					background: url('../img/sale.svg') no-repeat 15px center
					transition: background-color .3s ease, color .3s ease

					&:hover
						background: url('../img/sale-2.svg') no-repeat 15px center #2EB134
						color: #fff

		.rating__radio:checked~label svg path
			fill: var(--main-color)
			stroke: var(--main-color)

		.rating__list
			position: relative
			top: -2px

		.card__info-rating
			justify-content: start
			align-items: start
			margin-bottom: 30px

	&-bottom
		.card__info-count
			max-width: 100%
			padding-right: 0
			padding-left: 45px
			background-position: left center
			text-align: left

		.card__info-file
			margin-top: 30px
			flex-direction: column

			a:not(:first-child)
				margin-left: 0
				margin-top: 15px

	&-status
		&:last-child
			margin-right: 0

		+ .card-sticker
			margin-top: 15px

	&-price
		display: flex
		justify-content: flex-end
		align-items: center


	.rating
		display: flex

		span 
			white-space: nowrap

	&-rating
		display: flex
		flex-direction: column
		align-items: flex-end
		justify-content: flex-end
		pointer-events: none

	&-btn
		display: flex
		justify-content: flex-end
		margin-top: 30px

		.btn
			margin-left: 30px


	&-status
		position: relative
		padding-left: 25px
		line-height: 1.2
		margin-right: 20px

		+ .card__info-rating
			margin-top: 15px

	&-price
		line-height: 1
		margin-bottom: 30px
		justify-content: flex-end

		span
			font-weight: 500
			font-size: rem(28)
			margin-left: 5px

			span
				font-weight: 500
				font-size: rem(28)

	&-count
		color: var(--main-color)
		// font-size: em(18, 16)
		padding-right: 45px
		background-image: url('../img/ico-yegs.svg')
		background-repeat: no-repeat
		background-position: right center
		margin-top: 30px
		line-height: 30px
		max-width: 300px
		text-align: right

	&-file
		margin-top: 60px
		display: flex

		a
			&:not(:first-child)
				margin-left: 40px

.ico
	&-pdf, &-print, &-tz, &-share
		color: var(--main-color)
		display: flex
		align-items: center
		transition: color .3s ease

		&:hover
			color: var(--second-color)

		&::before
			content: ''
			background-repeat: no-repeat
			background-size: contain
			background-position: center
			size: 20px
			display: inline-block
			margin-right: 15px

	&-pdf
		&::before
			background-image: url('../img/ico-pdf.svg')

	&-print
		&::before
			background-image: url('../img/ico-print.svg')
	&-tz
		&::before
			background-image: url('../img/ico-tz.svg')
	&-share
		&::before
			background-image: url('../img/ico-share.svg')


.card

	.tabs
		margin-top: 45px

	.default-slider

		.swiper-button-prev
			right: calc(100% + 10px)
			left: auto

		.swiper-button-next
			left: calc(100% + 10px)
