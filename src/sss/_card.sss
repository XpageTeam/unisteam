.tabs__content-content
	.btn[href="#quest"]
		display: block
		margin: 0 auto
		max-width: 200px
		text-align: center

	.accordion + .btn
		margin-top: 30px

.accordion
	&__item:not(:last-child)
		margin-bottom: 10px
		
	&__title
		position: relative
		cursor: pointer
		padding: 20px 55px 20px 25px
		font-size: 12px
		font-weight: 500
		text-transform: uppercase
		border-radius: 5px
		border: 1px solid #f8f8f8
		background: #fafafa
		transition: background .3s ease, box-shadow .3s ease

		&::after
			content: ''
			position: absolute
			top: 16px
			right: 25px
			width: 30px
			height: 30px
			border-radius: 50%
			border: 1px solid var(--main-color)
			background: url('../img/ico-select-blue.svg') no-repeat center
			transition: transform .3s ease

		&:hover
			background: #fff

		&.active
			box-shadow: 2px 6px 36px rgba(0, 0, 0, 0.08)

			+ .accordion__body
				overflow: visible

			&::after
				transform: rotate(180deg)

	&__body
		margin-top: 10px
		height: 0
		overflow: hidden
		transition: height .3s ease

		> 
			p, ul, ol
				margin-left: 25px

				&:first-child
					margin-top: 15px


#content
	.accordion
		table:not([class])
			font-size: 14px
			line-height: 1.2
			margin: 10px 0 
			width: 100%
			border: 1px solid var(--border-color)

			thead
				border-bottom: 1px solid var(--border-color)
				font-weight: 600

				td:first-child
					color: var(--main-color)

			tbody
				tr
					background: transparent

			td
				border: 0

.compare
