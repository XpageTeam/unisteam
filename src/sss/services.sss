.services
	&__list
		display: flex
		flex-wrap: wrap
		margin: 0 0 -35px -35px

	&__item
		position: relative
		width: calc((100% - 35px * 3) / 3)
		margin: 0 0 35px 35px

		&-title
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			display: flex
			flex-direction: column
			justify-content: center
			align-items: center
			color: #fff


@media (max-width: 667px)
	
	.services__item
		width: 100%