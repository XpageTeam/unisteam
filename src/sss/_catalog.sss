.status
	&-1
		color: #2EB134

		&:before
			content: ''
			size: 16px
			background-image: url('../img/ico-status-1.svg')
			background-repeat: no-repeat
			position: absolute
			left: 0
			top: 2px
			display: block
	&-2
		
		&:before
			content: ''
			size: 16px
			background-image: url('../img/ico-status-2.svg')
			background-repeat: no-repeat
			position: absolute
			left: 0
			top: 2px
			display: block

@media (max-width: 1300px)

	.catalog__list.js__view-plates
		max-width: 950px

@media (max-width: 1200px)

	.catalog__list.js__view-plates
		max-width: 875px
		
	.catalog-one__item
		width: calc((100% - 120px)/2)

	.catalog

		&__list.js__view-list
			max-width: 650px

	@supports (display: grid)
		.catalog__list:not(.js__view-plates) .catalog__item
			grid-template-columns: 180px 1fr 1fr
			grid-gap: 10px 20px

		.catalog__list.js__view-plates
			grid-template-columns: repeat(2,1fr)
			gap: 20px


@media (max-width: 1050px)
	
	.catalog__list.js__view-plates
		max-width: 875px

	.catalog__list.js__view-plates .catalog__item
		width: calc((100% - 80px)/2)


@media (max-width: 1000px)
	

	.catalog__list.js__view-plates
		max-width: 100%

	

	.catalog-one

		&__item
			width: calc((100% - 20px * 2) / 2)
			margin: 0 0 20px 20px
			padding: 35px 25px

	.catalog-filter
		width: 100%
		margin-right: 0
		margin-bottom: 20px

		.sort
			margin: 0 0 -20px -30px
			flex-direction: row
			flex-wrap: wrap

		.sort__select--category
			width: calc((100% - 30px * 2) / 2)
			margin: 0 0 20px 30px

	.catalog__list
		&.js__view-plates 
			margin: 0 0 -20px -20px
			.catalog

				&__item
					width: calc((100% - 20px * 3) / 3)
					margin: 0 0 20px 20px



	.catalog__item
		&-img
			margin-bottom: 20px

		&-title
			margin-bottom: 15px

	.sort
		flex-wrap: wrap
		
		&__select
			order: 3

			&--category
				order: 1
			
			&--count
				order: 2

				.sort__select-select
					background-position: right 0px center
					padding-right: 20px

		&__view
			order: 4
			margin-left: auto


	.catalog__list:not(.js__view-plates) .catalog__item:not(:last-child)
		margin-bottom: 35px

	.catalog
		&__list

		
			&:not(.js__view-plates)
				flex-direction: column

				.catalog

					&__item
						grid-template-columns: 200px 1fr 1fr
						grid-gap: 10px 20px

	@supports (display: grid)

		.catalog
			grid-template-columns: 1fr
			grid-template-areas: "filter" "sort" "cataloglist" "paginator"

		// .catalog-filter
		// 	grid-row: none

@media (max-width: 667px)

	.catalog-sort
		margin-bottom: 0
	
	.catalog-filter

		.sort__select--category
			width: 100%
			padding-bottom: 0

	.sort__select-label
		display: none

	.sort__select--category
		width: 100%
		margin: 0
		padding-bottom: 20px
		margin-bottom: 20px
		// border-bottom: 1px solid var(--border-color)

		select
			width: 100%

	.sort__view
		width: 100%
		display: flex
		justify-content: flex-end
		padding-top: 20px
		margin-top: 20px
		border-top: 1px solid var(--border-color)
		display: none

	.sort__select--count
		order: 3

	.catalog__list.js__view-plates .catalog__item
		margin: 0 0 40px 20px


	
	.catalog-one

		&__item
			width: 100%
			padding: 35px 25px

			&-title
				margin-bottom: 15px

	.catalog
		&__item
			&-img
				img
					width: 100%
		&__list
			&.js__view-plates 
				.catalog

					&__item
						width: 100%

	.catalog
		&__list

		
			&:not(.js__view-plates)
				flex-direction: column

				.catalog

					&__item
						grid-template-columns: 100px 1fr 1fr
						grid-gap: 10px 20px
						grid-template-areas: 'img title title' 'img price price' 'img status-1 status-1' 'img status-2 status-2' 'img btn btn'   'info info info'
	
	@supports (display: grid)

		.catalog__list.js__view-plates
			grid-template-columns: 1fr