.search
	display: flex
	background-color: var(--background-color)
	padding: 50px

	&-cont



	input[type="search"]
		height: 60px
		padding: 0 30px
		border: 0
		box-shadow: 0
		flex: 1 1 auto

	input[type="submit"]
		flex: none
		border: 0
		size: 60px
		font-size: 0
		background-image: url('../img/ico-zoom.svg')
		background-position: 50%
		background-repeat: no-repeat


.main
	.search

		&-cont
			margin-top: -80px
			z-index: 10
			position: relative